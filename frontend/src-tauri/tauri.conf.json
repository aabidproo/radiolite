{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Radiolite",
  "version": "1.1.22",
  "identifier": "com.radiolite.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "title": "Radiolite",
        "width": 350,
        "height": 500,
        "decorations": false,
        "alwaysOnTop": false,
        "transparent": true,
        "hiddenTitle": true,
        "visible": false,
        "resizable": false,
        "shadow": true,
        "visibleOnAllWorkspaces": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' data: https:; script-src 'self'; style-src 'self' 'unsafe-inline'; connect-src 'self' https: http://localhost:8000 http://localhost:1420 ws://localhost:1420; media-src 'self' https: http:;"
    }
  },
  "bundle": {
    "active": true,
    "publisher": "Radiolite Open Source",
    "copyright": "Copyright 2026 Radiolite",
    "category": "public.app-category.music",
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "icons/tray-icon.png"
    ],
    "externalBin": [
      "api"
    ],
    "windows": {
      "nsis": {
        "installMode": "currentUser"
      },
      "wix": {
        "language": "en-US",
        "template": null
      }
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://api-radiolite.onrender.com/api/v1/releases/latest"
      ],
      "pubkey": "RWSH4Dlv37PsSlk+rm6KfXzFY0MDENyzm9JIpfqlgKco8DlZD1xuLugA"
    },
    "process": {}
  }
}
