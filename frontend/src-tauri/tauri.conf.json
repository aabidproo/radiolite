{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Radiolite",
  "version": "1.0.0",
  "identifier": "com.radiolite.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "title": "Radiolite",
        "width": 350,
        "height": 600,
        "decorations": false,
        "alwaysOnTop": false,
        "transparent": true,
        "hiddenTitle": true,
        "visible": false,
        "resizable": false,
        "shadow": true,
        "visibleOnAllWorkspaces": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": ["icons/tray-icon.png"]
  }
}
